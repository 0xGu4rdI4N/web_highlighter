{
    "manifest_version": 3,
    "name": "Web Page Highlighter",
    "version": "1.0",
    "description": "Highlight text on web pages and save highlights for future visits",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }